<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_navigation_drawer">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/compare_image"
        android:text="Best comparing prices mobile app"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:maxLines="2"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold|italic"
        />
    <ImageView
        android:id="@+id/compare_image"
        android:layout_width="match_parent"

        android:layout_height="200dp"
        android:layout_above="@id/product_name"
        android:src="@mipmap/ic_price_comare"
        android:scaleType="centerCrop"
        android:layout_marginBottom="50dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="20dp"
        android:layout_height="54dp"
        android:id="@+id/product_name"
       android:layout_centerInParent="true"
        android:background="@drawable/search_layout"
        android:paddingBottom="10dp"
        android:paddingTop="12dp"
        android:textColor="@color/black"
        android:paddingLeft="25dp"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:drawableStart="@drawable/ic_search"
        android:paddingRight="20dp"
        android:hint="@string/search_hint"
        android:drawableLeft="@drawable/ic_search"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="25dp" />


</RelativeLayout>